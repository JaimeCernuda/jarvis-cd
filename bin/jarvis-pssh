#!/usr/bin/env python3

import sys
from jarvis_cd.comm.ssh_config import SSHConfigMixin
from jarvis_cd.shell.exec_node import ExecNode

if __name__ == '__main__':
    if len(sys.argv) != 2:
        print("USAGE: jarvis-pssh [command]")
        exit()
    op = sys.argv[1]
    conf = SSHConfigMixin().LoadConfig()
    ExecNode(op, hosts=conf.all_hosts, ssh_info=conf.ssh_info).Run()

