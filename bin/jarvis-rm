#!/usr/bin/env python3

#USAGE jarvis-rm [path] [host-id]

from jarvis_cd.comm.ssh_config import SSHConfig
from jarvis_cd.basic.rm_node import RmNode
import sys,os

if __name__ == '__main__':
    conf = SSHConfig().LoadConfig()
    host_id = 0
    path = None
    if len(sys.argv) >= 2:
        path = sys.argv[1]
    if len(sys.argv) > 2:
        print("USAGE: jarvis-rm [path]")
        exit(1)
    if conf.all_hosts is None:
        print("Hostfile undefined in jarvis_conf.yaml")
        exit(1)
    RmNode(path, hosts=conf.all_hosts, ssh_info=conf.ssh_info).Run()